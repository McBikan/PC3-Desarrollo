{
  "name": "Python Dev Container",
  "image": "python:3.12.6",
  "extensions": [
      "ms-python.python"
  ],
  "settings": {
      "python.pythonPath": "/usr/local/bin/python"
  },
  "postCreateCommand": "pip install -r requirements.txt",
  "mounts": [
      "source=${localWorkspaceFolder},target=/workspace,type=bind"
  ],
  "workspaceFolder": "/workspace"
}
